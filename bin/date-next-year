#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"

format="${1:-"+%Y-%m-%d"}"

if is-mac; then
	date -v +1y "$format"
else
	# get the current date, but one year in the future, and work on linux
	year="$(date "+%Y")"
	year="$((year + 1))"
	# macos: date -jf "%Y-%m-%d" "$year-$(date "+%m-%d")" "$format"
	date --date="$year-$(date "+%m-%d")" "$format"
fi
