#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"

# dependencies
env QUIET=yes setup-util-sd

# help
function help {
	cat <<-EOF >/dev/stderr
		ABOUT:
		Trims surrounding whitespace from each line.

		USAGE:
		echo-trim-lines $'\t a \t' # a
		echo $'\t a \t' | echo-trim-lines
	EOF
}

# trim surrounding whitespace
function act {
	echo "$1" | sd '^[[:blank:]]+|[[:blank:]]+$' ''
}

source "$DOTFILES/sources/stdinargs.bash"
