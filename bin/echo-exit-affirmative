#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"

if is-help "$@"; then
	cat <<-EOF >/dev/stderr
		USAGE:
		echo-exit-affirmative exit 0
		# ^ echos yes

		echo-exit-affirmative exit 1
		# ^ echos no

		echo-exit-affirmative exit 2
		# ^ returns the failure code
	EOF
	exit 22 # Invalid argument
fi

ec=0 && ("$@") || ec="$?"
if test "$ec" -eq 0; then
	echo 'yes'
elif test "$ec" -eq 1; then
	echo 'no'
else
	exit "$ec"
fi
