#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"

if is-help "$@"; then
	cat <<-EOF >/dev/stderr
		USAGE:
		echo-exit-code exit 0
		# ^ echos 0, returns 0

		echo-exit-code exit 1
		# ^ echos 1, returns 0

		echo-exit-code exit 2
		# ^ echos 2, returns 0
	EOF
	exit 22 # Invalid argument
fi

ec=0 && ("$@") || ec="$?"
echo "$ec"
exit 0
