#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"

twitter-setup

function act {
	echo-style --h2="BLOCKING: $1"
	# https://developer.twitter.com/en/docs/twitter-api/v1/accounts-and-users/mute-block-report-users/api-reference/post-blocks-create
	twurl -d "screen_name=$1" '/1.1/blocks/create.json'
}

# stdin
stdin="no"
while read -rt 1 username; do
	stdin="yes"
	act "$username"
done <&0

if test "$stdin" = "no"; then
	# invalid
	if test "$#" -eq 0; then
		cat <<-EOF >/dev/stderr
			USAGE:
			twitter-block <...username>'
			twitter-block <username-list-file>'
			cat username-list-file | twitter-block'
		EOF
		exit 1
	elif test "$#" -eq 1 -a -f "$1"; then
		# file
		while read -rt 1 username; do
			act "$username"
		done <"$1"
	else
		# usernames
		for username in "$@"; do
			act "$username"
		done
	fi
fi
