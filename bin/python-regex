#!/usr/bin/env python

import re
import argparse
import sys
# import fileinput

def run():
	parser = argparse.ArgumentParser(description='Find and optionally replace with Python regular expressions.')
	parser.add_argument('find', type=str, help='Regular Expression Find')
	parser.add_argument('replace', nargs='*', default='', type=str, help='Regular Expression Replace')
	args = parser.parse_args()

	for data in sys.stdin:
		if args.replace:
			print(data.replace(args.find, args.replace[0]))
			#for treasure in re.sub(args.find, args.replace, data):
			#	print(treasure)
		else:
			for treasure in re.findall(args.find, data):
				print(treasure)

if __name__ == '__main__':
	run()
