#!/bin/sh
#
# Downloads the embedded video on any web page straight to the desktop.
#
# youtube-dlp, which is awesome:
#   https://github.com/yt-dlp/yt-dlp
#

hyperlink(){ 
  printf '\e]8;;%s\e\\%s\e]8;;\e\\' "$1" "${2:-$1}";
}

if command -v yt-dlp >/dev/null 2>&1; then
  cd ~/Desktop && yt-dlp "$1"
else
  printf 'yt-dlp is not installed. Get it from: '
  hyperlink https://github.com/yt-dlp/yt-dlp#installation 'https://github.com/yt-dlp/yt-dlp'
fi
