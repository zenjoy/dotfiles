#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"

# =====================================
# Checks

# check that an accident has not occured
if ! is-yum; then
	echo-style --notice="[$0] is for Linux systems with [yum] installed, skipping." >/dev/stderr
	exit 0
fi

# =====================================
# Action

sudo yum upgrade -y
