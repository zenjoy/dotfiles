#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"

# dependencies
env QUIET=yes setup-util-jq

# options
slug="$(
	ask --required \
		--question='What is the repository slug? org/repo' \
		--default="${1-}"
)"

# prepare
url="https://api.github.com/repos/$slug/releases/latest"

# act
fetch "$url" | jq -r '.tag_name'
