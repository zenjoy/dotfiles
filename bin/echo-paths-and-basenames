#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"

function help {
	cat <<-EOF >/dev/stderr
		USAGE:
		echo-paths-and-basenames ./*
		# ^ for each argument, outputs the absolute path, and then the basename
	EOF
}

function act {
	fs-absolute "$1"
	basename "$1"
}

source "$DOTFILES/sources/stdinargs.bash"
