#!/usr/bin/env bash
# shellcheck disable=SC2164,SC1091
source "$DOTFILES/sources/strict.bash"
source "$DOTFILES/sources/arrays.bash"
has_array_support 'mapfile'

while test "$1" = '--'; do
	shift
done

if confirm-positive --ppid=$$ -- "Confirm execution of the command that is below:" "$(echo-style --dim="$*")"; then
	echo-eval -- "$@"
else
	echo-style --notice="Skipped execution of:" --dim=" $*"
fi
