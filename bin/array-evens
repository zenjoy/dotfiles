#!/usr/bin/env bash
source "$DOTFILES/sources/strict.bash"
source "$DOTFILES/sources/arrays.bash"
requires_array_support 'mapfile'

# usage:
# mapfile -t values < <(array-evens "${tuples[@]}")

mapfile -t args < <(echo-lines -- "$@") # split jumbled arguments
for i in "${!args[@]}"; do
	if is-even "$i"; then
		echo "${args[$i]}"
	fi
done
